<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="AppThemeAlbum" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primario</item>
        <item name="colorPrimaryDark">@color/primariodark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">false</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorPrimary">#000</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!--Estilos para intro-welcome-->
    <style name="TemaWelcome" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TemaWelcome.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--Estilo albums -->
<style name="AppTheme2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="colorPrimaryDark">#000</item>
    <item name="colorPrimary">#000</item>
    <item name="colorAccent">@color/accent</item>
</style>

    <style name="AppTheme2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

        <item name="colorPrimaryDark">#000</item>
        <item name="colorPrimary">#000</item>
        <item name="colorAccent">@color/accent</item>

    </style>


    <style name="AppTheme3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

        <item name="colorPrimaryDark">#696262</item>
        <item name="colorPrimary">#544f4f</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="TemaWelcome.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Fin de estilos para intro-welcome-->

    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <!--Estilos seccion de noticias-->
    <style name="AppBaseThemeFeed" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="TemaFeed" parent="AppBaseThemeFeed">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
